/***** Hidding other sections components ******/ 
.announcement-bar {
	display: none !important;
}

.header {
	display: none !important;
}

/***** Customized burger menu in the banner-op for mobile *****/
@media (min-width : 768px) {

	.burger-menu,
	.banner-top-mobile,
	.banner-body-btn-mobile {
		display: none;
	}
}

/**********DESKTOP**************/
.banner {
	width: 100%;
	font-family: inherit, 'Courier New', Courier, monospace;
}

.banner-top {
	background: #F5F5F5;
	display: flex;
	align-items: center;
	justify-content: space-between;
	line-height: 1.2;
	position: relative;
}

.banner-top-title {
	font-weight: 600;
	font-size: 14px;
	color: black;
	margin-left: 10%;
}

.banner-top-text {
	text-align: center;
	font-weight: 400;
	font-size: 12px;
	color: black;
}

.banner-top-button {
	background: #FFF544;
	color: #000;
	padding: 8px 16px;
	text-decoration: none;
	font-weight: 400;
	letter-spacing: 0;
	display: inline-flex;
	align-items: center;
	gap: 8px;
	text-transform: uppercase;
	margin-right: 10%;
}

/*========= Banner Body ==============*/

.banner-body {
	width: 100%;
	height: 500px;
	display: flex;
	flex-direction: column;
}

.banner-body-top {
	height: 50%;
	width: 100%;
	background-size: cover !important;
	background-repeat: no-repeat;
	background-position: center center;
}

.banner-body-bottom {
	display: flex;
	height: 50%;
}

.banner-body-bottom-left {
	width: 45%;
	padding: 1rem;
	display: flex;
	flex-direction: column;
	justify-content: center;
}

.banner-body-bottom-right {
	width: 55%;
	background-size: cover !important;
	background-repeat: no-repeat;
	background-position: center center;
}

.banner-body-title {
	font-size: 40px;
	font-weight: 700;
	margin-bottom: 4px;
}

.banner-body-description {
	font-size: 16px;
	font-weight: 400;
	padding: 16px 8px;
	color: #000;
	line-height: 140%;
	margin-bottom: 0;
}

.banner-body-btn {
	display: flex;
	align-items: center;
	justify-content: center;
	background: #000;
	color: #fff;
	padding: 8px 16px;
	text-decoration: none;
	font-weight: 400;
	text-transform: uppercase;
	width: 30%;
	box-sizing: border-box;
	position: relative;
	margin-top: 0;
}

.banner-body-btn .icon-arrow {
	width: 16px;
	height: 16px;
	flex-shrink: 0;
}


.banner-body-btn:hover {
	background: #FFF544;
	color: #000;
}

.banner-footer {
	background: #F5F5F5;
	text-align: center;
	justify-content: center;
}

.footer-text {
	font-weight: 400;
	color: #000;
	letter-spacing: 0;
	margin: 0;
	padding: 0;
}

/********TABLET********/
@media (max-width : 1024px) {
	.banner {
		height: auto;
	}

	.banner-body {
		height: 400px;
	}

	.banner-body-top {
		height: 200px;
	}

	.banner-body-bottom-left .banner-body-bottom-right {
		width: 100%;
		padding: 0 5%;
	}

	.banner-body-title {
		font-size: 24px;
	}

	.banner-body-description {
		font-size: 13px;
		padding: 0 8px;
		margin-top: 0;
	}

	.banner-body-btn {
		width: 40%;
		font-size: 14px;
	}

	.banner-footer {
		padding: .125% 3%;
	}

	.footer-text {
		font-size: 11px;
	}
}

