<div class="banner">
    <div class="banner-top">
        <!-- Burger Menu Div For Mobile, not displayed for desktop  -->
        <div class="burger-menu">
            <button class="burger-btn" aria-label="Open Menu">
                <span></span>
                <span></span>
                <span></span>
            </button>
            <nav class="mobile-nav">
                <ul>
                    <li><a href="{{routes.root_url}}">Home</a></li>
                    <li><a href="{{ routes.collections_url }}">Catalog</a></li>
                    <li><a href="{{ routes.account_url }}">Account</a></li>
                </ul>
            </nav>
        </div>

        <h3 class="banner-top-title">{{section.settings.banner_top_title}}</h3>
        <p class="banner-top-text">{{ section.settings.banner_top_subtitle }}</p>
        {% if section.settings.button_content != blank %}
            <a class="banner-top-button" href="{{ section.settings.button_link }}">{{section.settings.button_content}}&#8594;</a>
        {% endif %}
    </div>
    <!-- The top of the banner for mobile, not displayed for desktop -->
    <div class="banner-top-mobile">
        <h1 class="banner-body-title-mobile">{{ section.settings.banner_body_title }}</h1>
        <p class="banner-body-description-mobile">{{ section.settings.banner_body_description_mobile }}</p>
    </div>

    <div class="banner-body">

        <div class="banner-body-top" 
            style="background: url('{{ 'background_img_01.png' | asset_url }}');">
        </div>

        <div class="banner-body-bottom">

            <div class="banner-body-bottom-left">
                <h1 class="banner-body-title">{{ section.settings.banner_body_title }}</h1>
                <p class="banner-body-description">{{ section.settings.banner_body_description }}</p>
                {% if section.settings.banner_body_button_content != blank %}
                    <a href="{{ section.settings.banner_body_button_link }}" class="banner-body-btn">
                        {{section.settings.banner_body_button_content  }}
                        &xrarr;
                    </a>
                {% endif %}
            </div>

            <div class="banner-body-bottom-right" 
                 style="background: url('{{ 'background_img_2.png' | asset_url }}');">

                 <!--Button Shop now for mobile, not displayed for desktop -->
                {% if section.settings.banner_body_button_content != blank %}
                    <a href="{{ section.settings.banner_body_button_link }}" class="banner-body-btn-mobile">
                        {{section.settings.banner_body_button_content  }}
                        &xrarr;
                    </a>
                {% endif %}
            </div>

        </div>
    </div>

    <div class="banner-footer">
        <p class="footer-text">{{ section.settings.footer_text }}</p>
    </div>

</div>

<script>
    // Wait for the DOM to fully load before running the script
    document.addEventListener('DOMContentLoaded', function(){
        const burgerBtn = document.querySelector('.burger-btn');
        const mobileNav = document.querySelector('.mobile-nav');

        // Toggle the mobile menu and button active state when burger button is clicked
        burgerBtn.addEventListener('click', function(){
            mobileNav.classList.toggle('show');
            burgerBtn.classList.toggle('active');
        });
        
        // Close the mobile menu if clicking outside of the menu or button
        document.addEventListener('click', function(e){
            if(!burgerBtn.contains(e.target) && !mobileNav.contains(e.target)){
                mobileNav.classList.remove('show');
                burgerBtn.classList.remove('active');
            }
        });
    })
</script>

