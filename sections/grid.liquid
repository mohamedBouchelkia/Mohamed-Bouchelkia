<div class="product-modal" hidden>
  <div class="modal-content">
      <button class="modal-close">
        <img src={{ 'icon-close.svg' | asset_url }} alt="" width="" height="" class="icon-close">
      </button>
      <div class="modal-image">
        <img class="product-image" width="" height=""/>
      </div>

      <div class="modal-layout-top">
        <h1 class="title"></h1>
        <div class="price"></div>
        <p class="description"></p>
      </div>

      <div class="modal-layout-bottom">
        <span class="label">Color</span>
        <div class="color-items"></div>
        <span class="label">Size</span>
        
        <div class="modal-size-wrapper">
          <select class="modal-size"></select>
          <svg class="icon-caret" viewBox="0 0 10 6">
              <path fill="#000" fill-rule="evenodd" d="M9.354.646a.5.5 0 0 0-.708 0L5 4.293 1.354.646a.5.5 0 0 0-.708.708l4 4a.5.5 0 0 0 .708 0l4-4a.5.5 0 0 0 0-.708" clip-rule="evenodd"/>
          </svg>
        </div>

        <div class="add-to-cart">
          <form action="{{ routes.cart_add_url }}" method="post" class="add-to-cart-form">
            <input type="hidden" name="id" class="product-variant-id"
              value="{{ product.selected_or_first_available_variant.id }}">
            <button type="submit" class="btn add-to-cart">
                      {{ 'products.product.add_to_cart' | t }}&#8594;
            </button>
          </form>
        </div>

      </div>

  </div>
</div>

<div class="grid">    
    <div class="product-grid">
    {% for i in (1..6) %}
        {% assign product_key = 'product_' | append: i %}
        {% assign product_item = section.settings[product_key] %}

        {% if product_item != blank %}
        {% if product_item.handle != blank %}
            {% assign product = product_item %}
        {% else %}
            {% assign product = all_products[product_item] %}
        {% endif %}

        {% if product %}
            <div class="product-card">
              <div class="image-wrapper">
                <img
                    src="{{ product.featured_image | image_url: width: 500 }}"
                    alt="{{ product.title }}"
                    width="{{ product.featured_image.width }}"
                    height="{{ product.featured_image.height }}"
                    loading="lazy"
                >
                  {% if product.metafields.custom.position_x and product.metafields.custom.position_y %}
                    {% assign position_x = product.metafields.custom.position_x %}
                    {%  assign position_y = product.metafields.custom.position_y %}
                    <button
                      class="product-details-btn"
                      style="left: {{ position_x }}%; top: {{ position_y }}%"
                      data-title = "{{ product.title }}"
                      data-price = "{{ product.price | money_without_currency}}{{ localization.country.currency.symbol }}"
                      data-description = "{{ product.description }}"
                      data-image = "{{ product.featured_image | image_url : width: 600}}"
                      data-colors = "{{ product.options_by_name['Color'].values | join: ',' }}"
                      data-sizes = "{{ product.options_by_name['Size']. values | join: ','}}"
                      data-variant-id="{{ product.selected_or_first_available_variant.id }}"
                      data-product-json={{ product | json | escape }}
                    >
                      +
                    </button>  
                  {% endif %}
                </div>
            </div>
        {% endif %}
        {% endif %}
    {% endfor %}
    </div>
</div>

<script>
  // Listen for clicks anywhere on the document
  document.addEventListener('click', (e)=> {

    // Find the nearest product details button that was clicked
    const button = e.target.closest('.product-details-btn');
    if(!button) return;

    // Select modal elements
    const modal = document.querySelector('.product-modal');
    const price = modal.querySelector('.price');
    const title = modal.querySelector('.title');
    const description = modal.querySelector('.description');
    const image = modal.querySelector('.modal-image img');
    const colors = modal.querySelector('.color-items');
    const sizes = modal.querySelector('.modal-size');
    const variantInput = modal.querySelector('.product-variant-id');

    // Set the default variant ID
    variantInput.value = button.dataset.variantId || button.dataset.firstVariantId;
    
    // Clear previous color options
    colors.innerHTML='';

    // Parse the full product data stored in the button
    const productData = JSON.parse(button.dataset.productJson);
    modal.dataset.productJson = button.dataset.productJson;

    // Populate modal with product info
    price.textContent = button.dataset.price;
    title.textContent = button.dataset.title;
    description.innerHTML = button.dataset.description;

    image.src = button.dataset.image;
    image.alt = button.dataset.title;

    colors.innerHTML = '';
    // Populate color options with two sections the left band and the name
    if(button.dataset.colors){
      button.dataset.colors.split(',').forEach(color => {
        const div = document.createElement('div');
        div.className = 'color-item';
        div.innerHTML = `
          <span class = "color-band" style="background:${color.toLowerCase()}"></span>
          <span class= "color-name">${color}</span>
        `;
        colors.appendChild(div);
      });
    }

  // Function updating variant ID when color or size changes
  const updateVariant = () =>{
      const activeColor = modal.querySelector('.color-item.active .color-name')?.textContent.trim();
      const selectedSize = sizes.value;

      if (activeColor && selectedSize){
        const variant = productData.variants.find(v=>{
          return v.options.includes(activeColor) && v.options.includes(selectedSize);
        });
        if (variant){
          variantInput.value = variant.id;
        }
      }
  };

    // Listener for color for slection (click)
    colors.addEventListener('click', (e)=>{
      const item = e.target.closest('.color-item');
      if (!item) return;
      colors.querySelectorAll('.color-item').forEach(c=> c.classList.remove('active'));
      item.classList.add('active');
      updateVariant();
    });

    sizes.innerHTML = '';
    // Populate size option, first option (defaultOption) always availaible 
    if(button.dataset.sizes){
      const defaultOption = document.createElement('option');
      defaultOption.value = '';
      defaultOption.textContent = 'Choose your size';
      defaultOption.selected = true;
      defaultOption.disabled = true;
      sizes.appendChild(defaultOption);

      button.dataset.sizes.split(',').forEach(size =>{
        const option = document.createElement('option');
        option.value = size;
        option.textContent = size;
        sizes.appendChild(option);
      });
    }
    sizes.addEventListener('change', updateVariant);
    modal.hidden = false;
  
  });

  document.addEventListener('click', (e)=>{
    if (e.target.matches('.modal-close img')){
      document.querySelector('.product-modal').hidden = true;
    }
  });

  // Adding soft winter jacket when Size = m and color = black
  document.addEventListener('submit', function(e){
    const cartForm = e.target.closest('.add-to-cart-form');
    if (!cartForm) return;
    const modal = cartForm.closest('.product-modal');
    if (!modal) return;

    const activeColorElement = modal.querySelector('.color-item.active .color-name');
    const sizeSelect = modal.querySelector('.modal-size');

    // Get selected color and size
    const selectedColor = activeColorElement ? activeColorElement.textContent.trim().toLowerCase() : ''; 
    const selectedSize = sizeSelect ? sizeSelect.value.trim().toLowerCase() : '';

    // Check selectedColor and selectedSize Values
    if(selectedColor === 'black' && selectedSize === 'm'){
      e.preventDefault();
      const formData = new FormData(cartForm);

      fetch('/cart/add.js', {
        method: 'POST',
        body: formData,
        headers: {'X-Requested-With': 'XMLHttpRequest'}
      })
      .then(response =>{
        if (!response.ok) throw new Error ('Failed to add the product');
        return response.json();
      })
      // Adding the soft winter jacket with it's ID, here we add the soft winter jack Medium and Black
      .then(()=>{
        const softWinterJacketId = 47726235353323;
        return fetch('/cart/add.js', {
          method : 'POST',
          headers : {
            'Content-Type' : 'application/json',
            'X-Requested-With': 'XMLHttpRequest'
          },
          body : JSON.stringify({
            id : softWinterJacketId,
            quantity : 1
          })
        });
      })
      .then(response => {
        if (!response.ok) {
          throw new Error ('Failed to add the soft winter jacket');
        }
        return response.json();
      })
      .then(()=>{
        window.location.href = '/cart';
      })
      .catch(err=>{
        console.error('Add auto error :', err);
        window.location.href = '/cart';
      });
    }
  });
</script>


